<Window x:Class="TestUserControl.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestUserControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="UserName" HorizontalAlignment="Left" Margin="167,93,0,0" VerticalAlignment="Top" Height="40" Width="122"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="167,176,0,0" VerticalAlignment="Top" Height="40" Width="122"/>
        <TextBox x:Name="usernameTxt" HorizontalAlignment="Left" Height="40" Margin="432,93,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="178"/>
        <Button x:Name="btnLogin" Content="LogIn" HorizontalAlignment="Left" Margin="323,247,0,0" VerticalAlignment="Top" Width="133" Height="46" Click="btnLogin_Click"/>
        <Button x:Name="btnSignup" Content="Signup" HorizontalAlignment="Left" Margin="323,327,0,0" VerticalAlignment="Top" Width="133" Height="46" Click="btnSignup_Click"/>
        <PasswordBox x:Name="pwdBox" HorizontalAlignment="Left" Height="40" Margin="432,176,0,0" VerticalAlignment="Top" Width="178"/>

    </Grid>
</Window>
